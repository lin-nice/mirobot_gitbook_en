{
    "title": "Mirobot使用教程",
    "description": "插件：多语言、评论、搜索、github、编辑",
    "author": "curvaboy",
    "language": "en",
    "root": ".",

    "plugins": [
        "multilingual-index",
        "github",
        "disqus",
        "-search",
        "search-pro",
        "tbfed-pagefooter",
        "insert-logo",
        "splitter"
        
    ],

    "pluginsConfig": {
        "multilingual-index": {
            "enableSuper": false,
            "index":"index.html"
        },
        "github": {
            "url": "https://github.com/lin-nice"
        },
        "disqus": {
        "shortName": "gitbookuse"
        },
         "search-pro": {
        "cutWordLib": "nodejieba",
        "defineWord" : ["Gitbook Use"]
        },
        "tbfed-pagefooter": {
        "modify_label": "该文件修订时间：",
        "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "insert-logo": {
        "url": "images/logo.png",
        "style": "background: none; max-height: 50px; min-height: 50px"
        }

    }
}
